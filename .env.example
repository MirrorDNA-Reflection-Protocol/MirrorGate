# MirrorGate Environment Configuration

# -- Server Settings --
PORT=3000
HOST=localhost
LOG_LEVEL=info

# -- Auth Settings --
# Generate a secret for HMAC or API Key generation
MIRRORGATE_SECRET=change-me-to-a-long-random-string
ALLOWED_ORIGINS=https://activemirror.ai

# -- Inference Backends --

# Local (Ollama/vLLM)
LOCAL_BACKEND_URL=http://localhost:11434/api/generate
LOCAL_BACKEND_MODEL=mirrorbrain-ami:latest

# Cloud (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=

# -- Storage --
# Path to MirrorDNA vault for audit logs
VAULT_PATH=~/.mirrordna/vault

# -- Safety Defaults --
DEFAULT_POLICY_PROFILE=DEFAULT
FAIL_CLOSED=true
